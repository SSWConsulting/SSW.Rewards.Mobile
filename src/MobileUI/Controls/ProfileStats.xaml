<?xml version="1.0" encoding="utf-8"?>

<Border
    BackgroundColor="{StaticResource Background}"
    StrokeShape="RoundRectangle 8"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:converters="clr-namespace:SSW.Rewards.Mobile.Converters"
    xmlns:staff="clr-namespace:SSW.Rewards.Shared.DTOs.Staff;assembly=Shared"
    xmlns:viewModels="clr-namespace:SSW.Rewards.Mobile.ViewModels"
    xmlns:controls="clr-namespace:SSW.Rewards.Mobile.Controls"
    x:DataType="viewModels:ProfileViewModelBase"
    x:Class="SSW.Rewards.Mobile.Controls.ProfileStats">
    <Border.Resources>
        <converters:LevelToStarsConverter x:Key="LevelToStars" />
    </Border.Resources>
    <VerticalStackLayout
        Spacing="15">
        <Grid WidthRequest="120"
              HeightRequest="120"
              Margin="0,10,0,0">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ChangeProfilePictureCommand}" />
            </Grid.GestureRecognizers>
        
            <!-- Setting Text="" here to prevent "?" from being displayed before image load -->
            <toolkit:AvatarView ImageSource="{Binding ProfilePic}"
                                Text=""
                                WidthRequest="120"
                                HeightRequest="120"
                                CornerRadius="60"
                                BorderWidth="2" />

            <Border
                BackgroundColor="{StaticResource primary}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                TranslationX="40"
                TranslationY="35"
                StrokeShape="Ellipse"
                StrokeThickness="0"
                IsVisible="{Binding IsMe}">
                <Label
                    FontFamily="FluentIcons"
                    FontAutoScalingEnabled="False"
                    FontSize="25"
                    Text="&#xe299;"
                    Margin="3"
                    TextColor="White" />
            </Border>
        </Grid>

        <VerticalStackLayout VerticalOptions="Center">
            <Label
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HorizontalTextAlignment="Center"
                FontAutoScalingEnabled="False"
                Text="{Binding Name}"
                Style="{StaticResource LabelBold}"
                FontSize="Large"
                TextColor="White" />
            <Label
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HorizontalTextAlignment="Center"
                FontAutoScalingEnabled="False"
                Text="{Binding Title}"
                Style="{StaticResource LabelBold}"
                FontSize="Small"
                TextColor="White" />
        </VerticalStackLayout>

        <!-- User's own stats -->
        <Border IsVisible="{Binding Path=ShowBalance}"
                Stroke="{StaticResource ProfileGridBorder}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 8"
                Margin="20, 0">
            <Grid
                BackgroundColor="{StaticResource ProfileGridBorder}"
                ColumnSpacing="1"
                ColumnDefinitions="*,*,*">
                <Border
                    Grid.Column="0"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 8,0,8,0">
                    <VerticalStackLayout
                        Spacing="2"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        Padding="0, 7"
                        BackgroundColor="{StaticResource Background}">
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label VerticalOptions="Center"
                                   FontFamily="FA6Solid"
                                   FontSize="14"
                                   TextColor="{StaticResource Coin}"
                                   FontAutoScalingEnabled="False"
                                   Text="&#xf091;" />
                            <Label FontSize="21"
                                   Style="{StaticResource LabelBold}"
                                   Text="{Binding Rank, StringFormat='#{0:n0}'}" />
                        </HorizontalStackLayout>
                        <Label
                            HorizontalOptions="Center"
                            Text="Ranking"
                            FontSize="13"
                            TextColor="{StaticResource White}" />
                    </VerticalStackLayout>
                </Border>

                <VerticalStackLayout Grid.Column="1"
                                     Spacing="2"
                                     HorizontalOptions="Fill"
                                     VerticalOptions="Fill"
                                     Padding="0, 7"
                                     BackgroundColor="{StaticResource Background}">
                    <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                        <Label VerticalOptions="Center"
                               FontFamily="FA6Solid"
                               FontSize="14"
                               TextColor="{StaticResource Coin}"
                               FontAutoScalingEnabled="False"
                               Text="&#x2b50;" />
                        <Label FontSize="21"
                               Style="{StaticResource LabelBold}"
                               Text="{Binding Points, StringFormat='{0:n0}'}" />
                    </HorizontalStackLayout>
                    <Label
                        HorizontalOptions="Center"
                        Text="Points"
                        FontSize="13"
                        TextColor="{StaticResource White}" />
                </VerticalStackLayout>

                <Border
                    Grid.Column="2"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 0,8,0,8">
                    <VerticalStackLayout Spacing="2"
                                         HorizontalOptions="Fill"
                                         VerticalOptions="Fill"
                                         Padding="0, 7"
                                         BackgroundColor="{StaticResource Background}">
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label VerticalOptions="Center"
                                   VerticalTextAlignment="Center"
                                   FontFamily="FA6Solid"
                                   FontSize="14"
                                   TextColor="{StaticResource Coin}"
                                   FontAutoScalingEnabled="False"
                                   Text="&#xf51e;" />
                            <Label FontSize="21"
                                   Style="{StaticResource LabelBold}"
                                   Text="{Binding Balance, StringFormat='{0:n0}'}" />
                        </HorizontalStackLayout>
                        <Label
                            HorizontalTextAlignment="Center"
                            HorizontalOptions="Center"
                            Text="Credits"
                            FontSize="13"
                            TextColor="{StaticResource White}" />
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </Border>

        <!-- Viewing other User's stats -->
        <Border IsVisible="{Binding Path=ShowBalance, Converter={toolkit:InvertedBoolConverter}}"
                Stroke="{StaticResource ProfileGridBorder}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 8"
                Margin="20, 0">
            <Grid
                BackgroundColor="{StaticResource ProfileGridBorder}"
                ColumnSpacing="1"
                ColumnDefinitions="*,*">

                <Border
                    Grid.Column="0"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 8,0,8,0">
                    <VerticalStackLayout Spacing="2"
                                         HorizontalOptions="Fill"
                                         VerticalOptions="Fill"
                                         Padding="0, 7"
                                         BackgroundColor="{StaticResource Background}">
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label VerticalOptions="Center"
                                   FontFamily="FA6Solid"
                                   FontSize="14"
                                   FontAutoScalingEnabled="False"
                                   TextColor="{StaticResource Coin}"
                                   Text="&#xf091;" />
                            <Label FontSize="21"
                                   FontAutoScalingEnabled="False"
                                   Style="{StaticResource LabelBold}"
                                   Text="{Binding Path=Rank, StringFormat='#{0:n0}'}" />
                        </HorizontalStackLayout>
                        <Label
                            HorizontalOptions="Center"
                            Text="Ranking"
                            FontSize="13"
                            FontAutoScalingEnabled="False"
                            TextColor="{StaticResource White}" />
                    </VerticalStackLayout>
                </Border>

                <Border
                    Grid.Column="1"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 0,8,0,8">
                    <VerticalStackLayout Spacing="2"
                                         HorizontalOptions="Fill"
                                         VerticalOptions="Fill"
                                         Padding="0, 7"
                                         BackgroundColor="{StaticResource Background}">
                        <HorizontalStackLayout Spacing="5" HorizontalOptions="Center">
                            <Label VerticalOptions="Center"
                                   FontFamily="FA6Solid"
                                   FontSize="14"
                                   FontAutoScalingEnabled="False"
                                   TextColor="{StaticResource Coin}"
                                   Text="&#x2b50;" />
                            <Label FontSize="21"
                                   FontAutoScalingEnabled="False"
                                   Style="{StaticResource LabelBold}"
                                   Text="{Binding Points, StringFormat='{0:n0}'}" />
                        </HorizontalStackLayout>
                        <Label
                            HorizontalOptions="Center"
                            Text="Points"
                            FontSize="13"
                            FontAutoScalingEnabled="False"
                            TextColor="{StaticResource White}" />
                    </VerticalStackLayout>
                </Border>

            </Grid>
        </Border>

        <controls:SocialMedia
            Padding="20,10"
            Margin="0, 0, 0, 0" />

        <Label Text="Skill Set"
               HorizontalOptions="Center"
               FontSize="16"
               Style="{StaticResource LabelBold}">
            <Label.Triggers>
                <DataTrigger TargetType="Label" Binding="{Binding IsLoading}" Value="True">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
                <DataTrigger TargetType="Label" Binding="{Binding Skills.Count}" Value="0">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </Label.Triggers>
        </Label>

        <ActivityIndicator
            HorizontalOptions="Center"
            VerticalOptions="Center"
            IsRunning="False"
            IsVisible="False"
            Color="{StaticResource primary}">
            <ActivityIndicator.Triggers>
                <MultiTrigger TargetType="ActivityIndicator">
                    <MultiTrigger.Conditions>
                        <BindingCondition Binding="{Binding IsLoading}" Value="True" />
                        <BindingCondition Binding="{Binding IsStaff}" Value="True" />
                    </MultiTrigger.Conditions>
                    <Setter Property="IsRunning" Value="True" />
                    <Setter Property="IsVisible" Value="True" />
                </MultiTrigger>
            </ActivityIndicator.Triggers>
        </ActivityIndicator>

        <HorizontalStackLayout
            BindableLayout.ItemsSource="{Binding Skills}"
            HorizontalOptions="Center"
            Margin="0,5,0,15"
            Spacing="30">
            <HorizontalStackLayout.Triggers>
                <DataTrigger TargetType="HorizontalStackLayout" Binding="{Binding Skills.Count}" Value="0">
                    <Setter Property="IsVisible" Value="False" />
                </DataTrigger>
            </HorizontalStackLayout.Triggers>
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="staff:StaffSkillDto">
                    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="8">
                        <Border Grid.Row="0"
                                HeightRequest="64"
                                WidthRequest="64"
                                BackgroundColor="{StaticResource FlyoutBackgroundColour}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 8"
                                Padding="8">
                            <Image Aspect="AspectFit">
                                <Image.Source>
                                    <Binding Path="ImageUri" >
                                        <Binding.TargetNullValue>
                                            <FontImageSource
                                                FontFamily="FA6Solid"
                                                FontAutoScalingEnabled="False"
                                                Glyph="&#xf0eb;"
                                                Color="{StaticResource Gray100}"
                                                Size="28"/>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>
                        </Border>
                        <Label Grid.Row="1"
                               Text="{Binding Name}"
                               MaximumWidthRequest="94"
                               HorizontalOptions="Center"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="Start"
                               FontSize="14"
                               Style="{StaticResource LabelBold}"/>

                        <HorizontalStackLayout
                            Grid.Row="2"
                            HorizontalOptions="Center"
                            BindableLayout.ItemsSource="{Binding Level, Converter={StaticResource LevelToStars}}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="staff:StaffSkillDto">
                                    <Label FontFamily="FA6Regular"
                                           FontAutoScalingEnabled="False"
                                           FontSize="15"
                                           Text="&#xf005;">
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                                         Binding="{Binding }"
                                                         Value="True">
                                                <Setter Property="FontFamily" Value="FA6Solid"/>
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</Border>